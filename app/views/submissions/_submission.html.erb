<%-# THIS IS THE INDIVIDUAL SUBMISSION# SHOW PARTIAL  -%>



<%= image_tag @submission.avatar.url(:medium) %>

  <h2><%= @submission.title %></h2>

  <h4>Description: <%= submission.description %></h4>
  <small>Submitted <%= time_ago_in_words(submission.created_at) %> ago by <%=  link_to submission.user.email, profile_path(submission.user.user_name) %></small>

  <br>

  <% if @submission.user == current_user %>
  <span><%= link_to "Edit Submission", edit_proposal_submission_path %> -
  <%= link_to 'Destroy', proposal_submission_path, :method => :delete %></span>
  <% end %>
  <hr>

  <%= form_for([@proposal, @submission,  @submission.comments.new]) do |f| %>
      <%= f.text_field :body, placeholder: 'Add a comment...' %>
      <%= f.submit %>

  <% end %>

  <br>

<div>
  <h3>Comments:</h3>
  <% if submission.comments %>
    <% submission.comments.each do |comment| %>
      <ul><%= link_to comment.user_id, profile_path(submission.user.user_name) %></ul>
    <ul><%= comment.body %></ul>

<% end %>
<% end %>
  </div>
  <hr>
