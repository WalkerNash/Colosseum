<%= form_for([@proposal, proposal.submissions.new], remote: true) do |form| %>

    <%= form.file_field :avatar %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>
  <% end %>
